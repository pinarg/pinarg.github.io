{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Local Jekyll Server",
            "type": "shell",
            "command": "echo \"Hello Pinar, your local Jekyll Server is going to start.\" && sleep 2 && bundle exec jekyll serve",
            "group": {
                "kind": "build",
                "isDefault": true
              },
              "presentation": {
                "reveal": "always",
                "panel": "shared"
              },
              "options": {"cwd": "${workspaceFolder}"}
        }
    ]
}